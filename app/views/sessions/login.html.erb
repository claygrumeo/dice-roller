<div>
  <h2>Log In</h2>
  <%= form_tag '/login' do %>
    Email:
    <%= text_field_tag :email %><br>
    Password:
    <%= password_field_tag :password %><br>
    <%= submit_tag 'Log In' %>
  <% end %>

  <br>

  <% if flash[:notice] %>
    <div id='login-error' class='alert alert-success'>
      <%= flash[:notice] %>
    </div>
  <% end %>
</div>
