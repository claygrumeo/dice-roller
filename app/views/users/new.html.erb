<div id="login-container">
  <h1>Create User</h1>
  <%= form_tag '/users' do %>
    <%= label_tag("email", "E-mail:") %>
    <%= text_field_tag 'user[email]' %><br>
    <%= label_tag("password", "Password:") %>
    <%= password_field_tag 'user[password]' %><br>
    <%= submit_tag 'Create User' %>
  <% end %>
</div>
