<%= stylesheet_link_tag 'rolls' %>

<h1>Rolls for <%= @user.email %></h1>
<p>
  <a id='roll-dice-link' href='/roller'>Roll more dice</a>
</p>
<table id='rolls-table'>
  <tr>
    <th>Type</th>
    <th>Value</th>
    <th>Time</th>
  </tr>
  <% @rolls.each do |roll| %>
    <tr>
      <td><%= roll.die_type %></td>
      <td><%= roll.value %></td>
      <td><%= roll.created_at.in_time_zone('EST').strftime('%m/%d/%Y %l:%M%P %Z') %></td>
    </tr>
  <% end %>

</table>